.menu__items {
  display: flex;
  flex-direction: column;

  width: 100%;
  height: 100%;

  padding-right: 100vw; /* Hack for hide scrollbar */

  overflow-y: auto;
  overflow-x: hidden;

  background: var(--menu-back-color);

  // fixes strange safari bug
  // when data-crop attribute is set, menu height is calculated wrong
  // have no idea why
  transform: scale(1);
}
